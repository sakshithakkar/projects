<%- include('header'); -%>

<h1>List of All Questions</h1>

<table class="table">
    <thead>
        <tr>
            <th>Question Id</th>
            <th>Question</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        <% questions.forEach(function(question) { %>
        <tr>
            <td><%= question.questionId %></td>
            <td><%= question.questionBody %></td>
            <td><%= question.category %></td>
            <td>
                <a href="/questions/:questionId/replies"> > Post an Answer</a>
                <a href="/questions/:questionId/upvote">Upvote Question</a>
                <a href="/questions/:questionId/downvote"> Downvote Question</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>

<%- include('footer'); -%>